<% provide(:title, "Log in") %>

<h1>Login</h1>

<div class="row">
	<div class= "col-md-6 col-md-offset-3">
		<%= form_for(:session, url: login_path) do |t| %>

			<%= t.label(:email) %>
			<%= t.email_field(:email, class: 'form-control') %>

			<%= t.label(:password) %>
			<%= link_to "forgot password", new_password_reset_path %>
			<%= t.password_field(:password, class: 'form-control') %>

			<%= t.label :remember_me, class: "checkbox inline" do %>
			  <%= t.check_box :remember_me %>
			  <span>Remember me on this computer</span>
			  <% end %>

			<%= t.submit "Log in", class: "btn btn-primary" %>
		<% end %>
		<p>New user? <%= link_to("Sign up now!", signup_path) %></p>
	</div>
</div>

